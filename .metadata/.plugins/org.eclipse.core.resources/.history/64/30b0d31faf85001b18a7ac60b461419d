	String nombreFichero = "archivo.txt";
	File fichero = new File(nombreFichero);
	
	public EscribirFichero() {
		if(fichero.exists()) {
			BufferedWriter bw = new BufferedWriter(new FileWriter(fichero));
		}
	}
	
